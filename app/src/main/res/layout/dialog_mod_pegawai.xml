<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detailpegawai"
            android:fontFamily="@font/nunito_bold"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <!-- Detail Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- ID Cabang Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:attr/colorButtonNormal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/card_pegawai"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/tvID_PEGAWAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/card_pegawai"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"/>

            </LinearLayout>

            <!-- Nama Cabang Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/nama_pegawai"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/tvNAMA_PEGAWAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/nama_pegawai"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"/>

            </LinearLayout>

            <!-- Alamat Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:attr/colorButtonNormal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:hint="@string/alamat_pelanggan"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/tvALAMAT_PEGAWAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/alamat_pelanggan"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:hint="@string/cabang"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/tvCABANG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:hint="@string/cabang"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?android:attr/colorButtonNormal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/kontak"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/tvNO_HP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="@string/kontak"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btDIALOG_MOD_PEGAWAI_Edit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/sunting"
                android:fontFamily="@font/nunito_bold"
                app:backgroundTint="#FFC107"
                app:icon="@drawable/baseline_edit_square_24"
                app:cornerRadius="8dp"/>

            <Button
                android:id="@+id/btDIALOG_MOD_PEGAWAI_Hapus"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/hapus"
                android:fontFamily="@font/nunito_bold"
                android:backgroundTint="#FF1D0D"
                app:icon="@drawable/baseline_restore_from_trash_24"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>