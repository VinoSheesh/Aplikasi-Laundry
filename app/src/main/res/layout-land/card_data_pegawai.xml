<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCARD_PEGAWAI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BackgroundCard">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        style="@style/widgetcard">

        <RelativeLayout
            style="@style/widgetcard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvID_PEGAWAI"
                style="@style/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:padding="8dp"
                android:text="@string/card_pegawai"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck"/>

            <LinearLayout
                android:layout_below="@id/tvID_PEGAWAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tvNAMA_PEGAWAI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nama_pegawai"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/alamat_pelanggan"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:layout_weight="0.05"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/tvALAMAT_PEGAWAI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:fontFamily="@font/poppins"
                    android:text="@string/alamat_pelanggan"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/cabang"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:layout_weight="0.05"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tvCABANG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:fontFamily="@font/poppins"
                    android:text="@string/cabang"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/no_hp"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:layout_weight="0.05"
                    android:fontFamily="@font/poppins_medium"/>

                <TextView
                    android:id="@+id/tvNO_HP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:fontFamily="@font/poppins"
                    android:text="@string/no_hp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <Button
                    android:id="@+id/btHUBUNGI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/hubungi"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    style="@style/Tombol1"/>

                <Button
                    android:id="@+id/btLIHAT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/lihat"
                    android:textSize="14dp"
                    tools:ignore="TextSizeCheck"
                    style="@style/Tombol2"/>
            </LinearLayout>
                
            </LinearLayout>
            
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>