<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan.TambahLayananActivity">

    <TextView
        android:id="@+id/tvTAMBAH_LAYANAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/activity_tambah_layanan"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTAMBAH_LAYANAN"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvNAMA_LAYANAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/nama_layanan" />

                <EditText
                    android:id="@+id/etNAMA_LAYANAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNAMA_LAYANAN"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:drawableStart="@drawable/baseline_local_laundry_service_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/nama_layanan"
                    android:minHeight="48dp"
                    android:background="@drawable/etborder"/>

                <TextView
                    android:id="@+id/tvHARGA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etNAMA_LAYANAN"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/harga_layanan" />

                <EditText
                    android:id="@+id/etHARGA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHARGA"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:drawableStart="@drawable/baseline_attach_money_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/harga_layanan"
                    android:minHeight="48dp"
                    android:background="@drawable/etborder"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvBRANCH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/cabang" />

                <EditText
                    android:id="@+id/etBRANCH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBRANCH"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/etborder"
                    android:drawableStart="@drawable/baseline_storefront_24"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/cabang"
                    android:inputType="text"
                    android:minHeight="48dp" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btSIMPAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etBRANCH"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/simpan"
            android:textSize="20sp"
            style="@style/Tombol1"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>